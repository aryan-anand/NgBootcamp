<%- include('../partials/header') %>
<%- include('../partials/navbar') %>

<%- include('../partials/flash')%>
  <%for (let blog of blogs){%>
      <div class="d-flex justify-content-center mt-5  ">
        <div class="card bg-dark text-white w-50 indexCard">
          <img src="<%=blog.image%>" class="card-img" alt="image related to blog">
          <div class="card-img-overlay">
            <h5 class="card-title"><%=blog.title%></h5>
            <p class="card-text"><%=blog.content.substring(0,300)%></p>
            <p class="card-text"><%=blog.author%></p>
            <a href="/blogs/<%=blog._id%>" class="btn btn-primary">Read</a>
          </div>
        </div>
      </div>
    <%}%>

